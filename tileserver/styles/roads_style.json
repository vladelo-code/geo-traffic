{
  "version": 8,
  "name": "roads_style",
  "sources": {
    "osm": {
      "type": "raster",
      "tiles": ["https://tile.openstreetmap.org/{z}/{x}/{y}.png"],
      "tileSize": 256,
      "maxzoom": 19
    },
    "roads": {
      "type": "vector",
      "url": "mbtiles://roads_traffic.mbtiles"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#ffffff"
      }
    },
    {
      "id": "osm-base",
      "type": "raster",
      "source": "osm",
      "minzoom": 0,
      "maxzoom": 19
    },
    {
      "id": "roads",
      "type": "line",
      "source": "roads",
      "source-layer": "roads",
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#00cc00",
        "line-width": 2,
        "line-opacity": 1
      }
    }
  ]
}